  ViewData["Title"] = "Edit";
  Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete</h1>
<h4>Category</h4>
<hr />
<form method="post" asp-action="Delete">
  <div class="border backgroundWhite">
